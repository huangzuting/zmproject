.product {
  flex-direction: row;
  display: flex;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  margin-left: 0rpx;
  background-color: #fff;
  padding-bottom: 0rpx;
  width: 100%;
  height: 240;
}

.product-container {
  flex-direction: column;
  display: flex;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  margin-left: 0rpx;
  margin-right: 10rpx;
  background-color: #fff;
  padding-bottom: 0rpx;
  border-top: 1px solid #ededed;
  width: 510rpx;
  height: 240rpx;
}

.product-author-date {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10px;
}

.product-author {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.product-date {
  margin-left: 20px;
  vertical-align: middle;
}

.product-image {
  width: 240rpx;
  height: 240rpx;
  margin: auto 20rpx;
  margin-bottom: 0rpx;
  margin-top: 1px;
}

.product-date {
  font-size: 26rpx;
  margin-bottom: 10px;
}

.product-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: auto;
}

.product-title-view {
  flex-direction: column;
  display: flex;
  margin-top: 5rpx;
  height: 80rpx;
  margin-bottom: 5rpx;
}

.product-like {
  font-size: 5px;
  line-height: 8px;
  margin-left: 5px;
  margin-bottom: 0rpx;
  margin-top: 0rpx;
  width: 100%;
  height: 40rpx;
}

.product-like-image {
  height: 16px;
  width: 16px;
  margin-right: 5px;
  vertical-align: middle;
}

.product-like-font {
  vertical-align: middle;
  margin-right: 10px;
}
